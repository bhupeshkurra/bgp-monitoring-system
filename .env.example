# BGP Monitoring System - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bgp_ensemble_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# =============================================================================
# RPKI VALIDATOR (Routinator)
# =============================================================================
ROUTINATOR_HOST=localhost
ROUTINATOR_PORT=9556
ROUTINATOR_API_URL=http://localhost:9556

# =============================================================================
# DASHBOARD API
# =============================================================================
DASHBOARD_API_HOST=0.0.0.0
DASHBOARD_API_PORT=5000

# =============================================================================
# MACHINE LEARNING MODELS
# =============================================================================
# Path to trained LSTM model
LSTM_MODEL_PATH=models/lstm_model.h5

# Path to Isolation Forest model
ISOLATION_FOREST_PATH=models/isolation_forest.pkl

# Path to feature scaler
SCALER_PATH=models/scaler.pkl

# =============================================================================
# BGP DATA COLLECTION
# =============================================================================
# RIPE RIS Live WebSocket URL
RIS_LIVE_URL=wss://ris-live.ripe.net/v1/ws/?client=bgp-monitoring-system

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/bgp_monitoring.log

# =============================================================================
# ANOMALY DETECTION THRESHOLDS
# =============================================================================
# Heuristic detection sensitivity (low, medium, high)
HEURISTIC_SENSITIVITY=medium

# ML anomaly score threshold (0.0 - 1.0)
ML_ANOMALY_THRESHOLD=0.7

# Correlation confidence threshold (0.0 - 1.0)
CORRELATION_THRESHOLD=0.6
